#!/bin/bash
WHO=${1:-$(whoami)}
CUSTOM=${2:-https://paypal.me/NealFultz}

cd "$(git rev-parse --show-cdup)"

mkdir -p .github
cat >.github/FUNDING.yml <<EOF
# Generated by http://github.com/nfultz/sponsorify
github: $WHO
custom: $CUSTOM
EOF
git add -f .github/FUNDING.yml
git commit -m "sponsorfying" .github/FUNDING.yml
